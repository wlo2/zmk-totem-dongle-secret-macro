/*
 * Bootloader fix for Seeed XIAO nRF52840
 * Simple override of the bootloader behavior
 */

/ {
    behaviors {
        // Override the default bootloader behavior to use type 2
        bootloader {
            compatible = "zmk,behavior-reset";
            #binding-cells = <0>;
            type = <2>; // Force bootloader mode instead of normal reset
        };
    };
};