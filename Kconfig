# ZMK Module Kconfig
# Configuration options for bootloader fix module

config BOOTLOADER_FIX_NRF52840
    bool "Enable nRF52840 bootloader fix"
    default y if SOC_NRF52840_QIAA || SOC_SERIES_NRF52X
    help
      Enable bootloader fix for nRF52840 chips that sets GPREGRET
      register for proper DFU mode entry.

if BOOTLOADER_FIX_NRF52840

config BOOTLOADER_FIX_LOG_LEVEL
    int "Bootloader fix log level"
    default 3
    help
      Log level for bootloader fix messages.
      0 = OFF, 1 = ERROR, 2 = WARNING, 3 = INFO, 4 = DEBUG

endif # BOOTLOADER_FIX_NRF52840